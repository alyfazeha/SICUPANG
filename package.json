{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "sicupang",
  "private": true,
  "type": "module",
  "scripts": {
    "app": "concurrently -n \"PHP,VITE,TSC,FASTAPI\" -c \"yellow.bold,cyan.bold,magenta.bold,green.bold\" \"php artisan serve\" \"bun run dev\" \"bunx tsc --watch\" \"bun run service\"",
    "build": "vite build",
    "dev": "vite",
    "lint": "eslint resources/ts --ext .ts --fix",
    "service": "cd python && venv/Scripts/python.exe -m uvicorn main:app --reload --port 8080"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@shufo/prettier-plugin-blade": "^1.16.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/bun": "latest",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "axios": "^1.8.2",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.33.0",
    "laravel-vite-plugin": "^2.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.0.4"
  }
}